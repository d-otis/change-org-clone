<%= form_for(@signature) do |f| %>
	<div class="form-group">
		<%= f.label :message %>
		<%= f.text_area :message, :class => "form-control", :placeholder => "I'm signing because... (optional)" %>
	</div>
	<div class="form-group form-check">
		<%= check_box("signature", "anonymous", :class => 'form-check-input', :checked => true) %>
		<%= label_tag "signature_anonymous", "Display my name and comment on this petition", :class_name => 'form-check-label' %>
	</div>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :petition_id, :value => @petition.id %>
		
	<%= f.submit "Sign this petition", :class=> 'btn btn-secondary' %>
<% end %>
  