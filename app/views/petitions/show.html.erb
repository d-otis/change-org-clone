<div class="row mb-3"> <!-- Title and Meta Row -->
	<div class="col">
		<% if !logged_in? %>
		<div class="alert alert-primary text-center" role="alert">Must be <%= link_to 'logged in', signin_path %> to sign petition.</div>
		<% end %>
		<h1 class="petition-title"><%= @petition.title %></h1>
		<small class="text-muted"><%= @petition.author_name %> started this petition on <%= display_date(@petition.created_at) %></small>
	</div>
</div> <!-- end title and meta row -->
<div class="row"> <!-- petition description and signature form -->
	<div class="col-sm-8 petition-desc">
		<p><%= simple_format(@petition.description, {}, :sanitize => true) %></p>
	</div>
	<div class="col-sm-4">
		<div class="row">
			<div class="col">
				<% if logged_in? %>
					<%= render 'signature_confirmation' if has_signed?(@petition) %>
				<% end %>
				<h3>Signature Goal: <%= @petition.signature_count %> of <%= @petition.goal %></h3>
					<%= render partial: 'progress_bar', locals: {percent: @petition.goal_percent} %>
				<% if logged_in? %>
					<%= render 'signature_form' unless has_signed?(@petition) %>
				<% end %>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col">
				<%= render 'signatures' %>
			</div>
		</div>
	</div>
</div> <!-- END petition description and signature form -->


<%= render 'edit_link' if is_author?(@petition) %>

