
<h3>Signatures:</h3>
<% if @petition.signatures.count == 0 %>
	<div class="alert alert-warning text-center" role="alert">Be the first to sign!</div>
<% else %>
	<% @petition.signatures_desc.each do |signature| %>
		<div class="card mb-2">
			<div class="card-body">
				<blockquote class="blockquote mb-0">
					<% if signature.message %>
						<p class="font-italic">"<%= display_message(signature) %>"</p>
					<% end %>
					<footer class="blockquote-footer"><i class="far fa-user-circle"></i> <%= link_to signature.user_name, user_path(signature.user), :class => 'badge badge-pill badge-danger' %> <small class="font-weight-light"> on <%= display_date(signature.created_at) %></small></footer>
				</blockquote>
			</div>
			<% if current_user == signature.user %>
				<div class="card-body text-center mt-0">
					<%= button_to "Remove Signature", signature, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger text-light' %>
				</div>
			<% end %>
		</div>
	<% end %>
<% end %>



