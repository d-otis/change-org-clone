<%= render 'shared/notices' %>
<div class="row">
	<h1><%= @user.name %></h1>
</div>
<div class="row mb-3">
	<div class="col">
		<h2>Petitions</h2>
		<div class="list-group">
			<%= render(partial: 'petitions/details', collection: @user.authored_petitions, :as => :petition) || "User has no authored petitions." %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col">
		<h2>Signed Petitions</h2>
		<div class="list-group">
			<%= render(partial: 'signatures/details', collection: @user.signatures, :as => :signature) || "User has not signed any petitions."%>
		</div>
	</div>
</div>
