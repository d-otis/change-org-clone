<%= render 'shared/notices' if flash.any? %>
<!-- Button trigger modal -->

<!-- Modal -->
<%= render 'modal' %>
<div class="row">
	<h1><%= @user.name %> : Dashboard</h1>
</div>
<hr class="mb-4">
<div class="row">
	<div class="col-sm-3 mb-3">
		<h2>Account Info</h2>
		<ul class="list-group">
		  <li class="list-group-item">Email: <%= @user.email %></li>
		  <%= link_to "edit account info", edit_user_path(@user), :class => "btn btn-danger btn-block my-1" %>
		  <!-- <li class="list-group-item"><%= button_to "Delete Account", @user, :method => :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-danger text-light' %></li> -->
		  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
		   Delete Account
		  </button>
		</ul>
	</div>
	<div class="col-sm-9">
		<div class="row mb-3">
			<div class="col">
				<h2>My Petitions</h2>
				<div class="list-group">
					 <%= render partial: 'petitions/details', collection: @user.authored_petitions, :as => :petition %>
					 <% if @user.authored_petitions.blank? %>
					 	<em>You haven't created any petitions yet!</em>
					 <% end %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<h2>I've Supported...</h2>
				<div class="list-group">
					<%= render partial: 'signatures/details', collection: @user.signatures, :as => :signature %>
					<% if @user.signatures.blank? %>
						<em>You haven't signed any petitions yet!</em>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	
</div>
<%# console %>
