<div class="row">
	<div class="col-sm-6 offset-sm-3">
		<h3>Sign in</h3>
		<%= form_tag "/sessions" do %>
		<div class="form-group">
			<%= label_tag :user_email, "Email" %>
			<%= email_field :user, :email, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<%= label_tag :user_password, "Password" %>
			<%= password_field :user, :password, :class => 'form-control' %>
		</div>
		<%= submit_tag "Signin", :class => 'btn btn-danger' %>
		<% end -%>
	</div>
</div>